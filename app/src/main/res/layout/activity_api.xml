<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".APIActivity">

    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rick and Morty"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Primer Spinner (para nombres) -->
    <Spinner
        android:id="@+id/spinnerName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Segundo Spinner (para estados) -->
    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- Botón para enviar la consulta -->
    <Button
        android:id="@+id/btnSend"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerStatus"
        app:layout_constraintStart_toStartOf="@id/spinnerName"
        app:layout_constraintEnd_toStartOf="@id/btnBackHome"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Enviar"
        style="@style/RoundButton" />

    <!-- Botón para volver a la pantalla de inicio -->
    <Button
        android:id="@+id/btnBackHome"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Volver"
        app:layout_constraintTop_toBottomOf="@id/spinnerStatus"
        app:layout_constraintStart_toEndOf="@id/btnSend"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        style="@style/RoundButton"/>

    <!-- RecyclerView para mostrar la lista de personajes -->
    <!--  Un RecyclerView es una vista de contenedor de alto rendimiento que puede contener un gran número de
    elementos de datos y permitir al usuario desplazarse por ellos. Es especialmente útil cuando tienes una lista
    de elementos que puede cambiar dinámicamente.  -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCharacters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
