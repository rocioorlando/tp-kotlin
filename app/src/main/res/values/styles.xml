<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_round_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="ButtonStyleBlueBorder" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background_blue_border</item>
    </style>
</resources>